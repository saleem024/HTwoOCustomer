<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context="com.techkshetrainfo.htwoocustomer.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#FAFAFA"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            card_view:contentPadding="0dp">

            <ImageButton
                android:id="@+id/billingImageButton"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:adjustViewBounds="false"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/billing_image" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#FAFAFA"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            card_view:contentPadding="0dp">

            <ImageButton
                android:id="@+id/invoiceImageButton"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/invoice_image" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
